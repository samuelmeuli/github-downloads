{
	"private": true,
	"scripts": {
		"format": "prettier --write",
		"lint": "eslint --fix --max-warnings 0"
	},
	"devDependencies": {
		"@samuelmeuli/eslint-config": "^2.0.1",
		"eslint": "^5.16.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-config-prettier": "^4.3.0",
		"eslint-plugin-import": "^2.17.2",
		"husky": "^2.3.0",
		"lint-staged": "^8.1.7",
		"prettier": "^1.17.1"
	},
	"eslintConfig": {
		"root": true,
		"extends": [
			"@samuelmeuli/eslint-config/base",
			"prettier"
		],
		"env": {
			"browser": true,
			"webextensions": true
		}
	},
	"prettier": {
		"printWidth": 100,
		"trailingComma": "all"
	},
	"lint-staged": {
		"*.js": [
			"yarn lint",
			"yarn format",
			"git add"
		],
		"*.{json,md,yml}": [
			"yarn format",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
